{
	"name": "TicketSelling",
	"plural": "ticket-sellings",
	"base": "PersistedModel",
	"idInjection": true,
	"options": {
		"validateUpsert": true
	},
	"scope": {
		"order": "createdAt DESC"
	},
	"properties": {
		"createdAt": {
			"type": "date",
			"defaultFn": "now"
		},
		"updatedAt": {
			"type": "date",
			"defaultFn": "now"
		},
		"images": {
			"type": [
				"string"
			]
		},
		"content": {
			"type": "string"
		},
		"dataType": {
			"type": "string",
			"default": "system"
		},
		"airline": {
			"type": "string",
			"default": "all"
		},
		"flightType": {
			"type": "string",
			"required": true,
			"default": "oneWay"
		},
		"seatType": {
			"type": "string"
		},
		"packageWeight": {
			"type": "number"
		},
		"seatCount": {
			"type": "number"
		},
		"isBid": {
			"type": "boolean",
			"default": false
		},
		"bidDueDate": {
			"type": "date"
		},
		"dueDate": {
			"type": "date"
		},
		"startingPrice": {
			"type": "number"
		},
		"price": {
			"type": "number"
		},
		"status": {
			"type": "string",
			"default": "open"
		},
		"approved": {
			"type": "boolean",
			"default": false
		},
		"fbFeedId": {
			"type": "string"
		},
		"fbFeed": {
			"type": "object"
		},
		"trip": {
			"type": {
				"departure": {
					"type": "string"
				},
				"destination": {
					"type": "string"
				},
				"startDate": {
					"type": "date",
					"defaultFn": "now"
				},
				"startTime": {
					"type": "string"
				},
				"endDate": {
					"type": "date",
					"defaultFn": "now"
				},
				"endTime": {
					"type": "string"
				}
			}
		},
		"tripBack": {
			"type": {
				"departure": {
					"type": "string"
				},
				"destination": {
					"type": "string"
				},
				"startDate": {
					"type": "date",
					"defaultFn": "now"
				},
				"startTime": {
					"type": "string"
				},
				"endDate": {
					"type": "date",
					"defaultFn": "now"
				},
				"endTime": {
					"type": "string"
				}
			}
		}
	},
	"validations": [],
	"relations": {
		"bids": {
			"type": "hasMany",
			"model": "TicketSellingBid",
			"foreignKey": "ticketSellingId",
			"primaryKey": "id"
		},
		"currentBid": {
			"type": "belongsTo",
			"model": "SellBid",
			"foreignKey": "currentBidId",
			"primaryKey": "id"
		},
		"contact": {
			"type": "belongsTo",
			"model": "user",
			"foreignKey": "contactId",
			"required": true
		},
		"creator": {
			"type": "belongsTo",
			"model": "user",
			"foreignKey": "creatorId",
			"required": true
		}
	},
	"acls": [],
	"methods": {
		"resendTicket": {
			"accepts": [
				{
					"arg": "id",
					"type": "string",
					"description": "ticket id",
					"required": true
				}
			],
			"description": "Resend ticket",
			"http": [
				{
					"path": "/resend-ticket",
					"verb": "post"
				}
			]
		}
	}
}
